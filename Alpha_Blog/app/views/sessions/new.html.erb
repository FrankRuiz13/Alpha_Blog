<h1 style="font-family: Oswald">Log in</h1>

<div class="row">
  <div class="large-12 columns">
  <%= form_for(:session, :html => {class: "translucent-form-overlay", role: "form"}, url: login_path) do |f| %>
         <div class="floated-label-wrapper">
          <%= f.label :email %>
          <%= f.text_field :email, placeholder: "email", autofocus: true %>
         </div> 
         <div class="floated-label-wrapper">
          <%= f.label :password %>
          <%= f.text_field :password, placeholder: "password", autocomplete: "off" %>
         </div> 
          <div class="large-11 columns">
            <%= f.submit "Log in", class: "button" %>
          </div>
    <% end %>
      <div class="small-12 columns">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
      </div>
    </div>
  </div>